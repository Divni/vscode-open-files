{
    "name": "open-files",
    "displayName": "Open Files (Alpha)",
    "description": "A powerful alternative to the Open Editors widget. Showing sorted and grouped open files.",
    "icon": "icon.png",
    "version": "0.0.3",
    "publisher": "Divni",
    "repository": {
        "type": "git",
        "url": "https://github.com/Divni/vscode-open-files"
    },
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:openFiles"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.openfiles.closeAll",
                "title": "Close All",
                "icon": {
                    "light": "resources/closeall.svg",
                    "dark": "resources/closeall_inverse.svg"
                }
            },
            {
                "command": "extension.openfiles.refresh",
                "title": "Refresh"
            },
            {
                "command": "extension.openfiles.close",
                "title": "Close",
                "icon": {
                    "light": "resources/action-close.svg",
                    "dark": "resources/action-close-dark.svg"
                }
            },
            {
                "command": "extension.openfiles.closeGroup",
                "title": "Close Group",
                "icon": {
                    "light": "resources/closeall.svg",
                    "dark": "resources/closeall_inverse.svg"
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "openFiles",
                    "name": "Open Files"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "extension.openfiles.close",
                    "when": "view == openFiles && viewItem == file",
                    "group": "inline"
                },
                {
                    "command": "extension.openfiles.closeGroup",
                    "when": "view == openFiles && viewItem == group",
                    "group": "inline"
                }
            ],
            "view/title": [
                {
                    "command": "extension.openfiles.closeAll",
                    "when": "view == openFiles",
                    "group": "navigation"
                },
                {
                    "command": "extension.openfiles.refresh",
                    "when": "view == openFiles"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
